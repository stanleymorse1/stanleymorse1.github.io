*{
	margin: 0px;
}
html,body{
	height:100%;
}
body:not(.sidebar li){
	font-family: calibri;
}
body{
	background-color: #444444;
}
.sidebar{
	margin-left:0px;
	width: 300px;
	padding-top:2%;
	background-color: #282828;
	position: fixed;
	height: 100%;
	box-shadow: 3px 0px 10px #111111;
}
.sidebar img{
	margin-left: 20px;
	margin-right: auto;
	padding: 16px;
}
.sidebar li{
	font-family: courier new;
	display: block;
	padding: 16px;
	font-size: 160%;
	text-decoration: none;
}
.sidebar a{
	color: white;
	text-decoration: none;
}
.sidebar a:hover{
	text-decoration: underline;
}
header{
	background-color: #282828;
	padding-left: calc(10% + 260px);
	padding-right: 10%;
	padding-top: 2%;
	padding-bottom: 2%;
	box-shadow: 0px 4px 10px #222222;
}
header h1{
	font-size:2vw;
	padding-bottom:0.5%;
}
header li{
	font-size: 1.2vw;
}
#main-page-media{
	display:block;
	max-width:100%;
	max-height:100%;
}
#page{
	color: black;
	background-size: length;
	background-color: white;
	margin-left: calc(10% + 260px);
	margin-right: 10%;
	display: flex;
	flex-flow: column;
	height: 100%;
}
#page *:not(#main-page-media){
	font-size: 120%;
	padding-top: 2%;
	margin-left: 10%;
	margin-right: 10%;
	margin-bottom: 0px;
}

header a{
	vertical-align: middle;
	color: white;
	text-decoration: none;
}
header a:hover{
	text-decoration: underline;
}
#menu-social{
	padding-left: 0px;
}
#menu-social img{
	width:0.9vw;
	height:0.9vw;
	margin-right:6px;
}
.social-buttons li{
	display: inline;
	padding-right: 17px;
}