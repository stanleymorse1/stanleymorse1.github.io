*{
	margin: 0px;
}
html{
	scroll-behavior: smooth;
}
html,body{
	height:100%;
}
body:not(.sidebar li){
	font-family: calibri;
}
body{
	background-color: #444444;
}
.sidebar{
	margin-left:0px;
	width: 300px;
	padding-top:2%;
	background-color: #282828;
	position: fixed;
	height: 100%;
	box-shadow: 3px 0px 10px #111111;
}
.sidebar img{
	margin-left: 20px;
	margin-right: auto;
	padding: 16px;
}
.sidebar li{
	font-family: courier new;
	display: block;
	padding: 16px;
	font-size: 160%;
	text-decoration: none;
}
.sidebar a{
	color: white;
	text-decoration: none;
	transition: 0.15s ease;
}
.sidebar a:hover, header a:hover{
	/* text-decoration: underline; */
	color: #dd4a4a;
}
#menu-social{
	padding-left: 0px;
}
#menu-social img{
	width:0.9vw;
	height:0.9vw;
	margin-right:6px;
}
.social-buttons li{
	display: inline;
	padding-right: 17px;
}
header{
	background-color: #282828;
	padding-left: calc(10% + 300px);
	padding-right: 10%;
	padding-top: 2%;
	padding-bottom: 2%;
	box-shadow: 0px 4px 10px #222222;
}
header h1{
	font-size:2vw;
	padding-bottom:0.5%;
}
header a{
	vertical-align: middle;
	color: white;
	text-decoration: none;
	transition:0.15s ease;
}
header li{
	font-size: 1.2vw;
}
#main-page-media img{
	display:block;
	width:100%;
	height:auto;
}
#main-page-media{
	position:relative;
}
#overlay{
	position: absolute;
	background: rgba(90, 27, 18, 0.6);
	color: #f1f1f1;
	width: 100%;
	height: 100%;
	transition: .7s ease;
	opacity: 1;
	font-size:5vw;
}
#overlay p{
	text-align: center;
	padding-top:25%;
	transition: .7s ease;
}
#main-page-media:hover #overlay {
	opacity: 0;
}
#main-page-media:hover #overlay p{
	padding-top:40%;
}
#page:not(.emphasis, .content, .content h2, #project-thumbnails *, #projects *
){
	color: black;
	background-size: length;
	background-color: white;
	margin-left: calc(10% + 300px);
	margin-right: 10%;
	display: flex;
	flex-flow: column;
	height: 100%;
}
.content{
	color: black;
	/* background-size: length; */
	background-color: white;
	/* display: flex; */
	flex-flow: column;
	/* height: 100%; */
}
.content p, .content ul{
	padding-bottom:5%;
}
#projects h2{
	text-align:center;
	font-size: 3vw;
	text-decoration:underline;
	padding-bottom:2%;
}
/* #projects{
	max-height:30vw;
} */
#showcase{
	box-sizing:border-box;
	display:flex;
	flex-direction:row-reverse;
	max-height:17vw;
	height:100%;
	.folio-thumbnail{
		display:flex;
		position:relative;
		flex: 1 1 25%;
		max-width:calc(100vw/4);
		overflow: hidden;
		transition:flex-basis 0.7s ease-in-out;
	}
	.folio-thumbnail:hover{
		flex-basis:50%;
		.folio-overlay{
			background: rgba(90, 27, 18, 0);
			padding-top:6.7em;
			text-decoration:underline;
		}
	}
	img{
		display:block;
		object-fit:cover;
		/* max-height:2%; */
	}
}
.folio-overlay{
	box-sizing:border-box;
	position:absolute;
	text-align:center;
	font-size:2vw;
/* 	padding-top:20%;
	padding-left:50%;
	padding-right:50%; */
	padding-top:4.5em;
	background: rgba(90, 27, 18, 0.6);
	color: #f1f1f1;
	width: 100%;
	height: 100%;
	transition: .2s ease;
	opacity: 1;
}
.content:not(#intro, #face-container, #face-overlay, #projects, #showcase){
	padding-right: 10%;
	padding-left: 10%;
	font-size: 1.1vw;
}
.content h2:not(#projects *){
	text-align:center;
	font-size: 3vw;
	text-decoration:underline;
	padding-bottom:12%;
}
.emphasis{
	font-weight:bold;
	color: #dd4a4a;
	background:none;
}
#intro{
	background-size: length;
	background-color: white;
	/* display: flex; */
	/* flex-flow: column; */
	padding: 20%;
	padding-bottom:10%;
	padding-top:10%;
	font-size: 1.4vw;
}
#about-me{
	padding-top:7%;
	padding-bottom:7%;
	padding-right:0%;
}
#biographic{
	width:55%;
	float:left;
	display:block;
}
#face-container{
	position:relative;
	margin-right:3%;
	width:40%;
	height:auto;
	float:left;
}
#face-container img{
	/* filter: saturate(0%); */
	display:flex;
	width:100%;
	height:100%;
}
#face-overlay{
	bottom:0;
	position: absolute;
	background: rgba(10, 10, 10, 0.4);
	width:100%;
	height:auto;
	transition: .7s ease;
	opacity: 0;
	text-align:center;
	color:white;
	font-size:auto;
	padding-top:3%;
	padding-bottom:3%;
}
#face-container:hover #face-overlay{
	opacity: 1;
}
