*{
	margin: 0px;
}
html{
	scroll-behavior: smooth;
}
html,body{
	height:100%;
}
body:not(.sidebar li){
	font-family: calibri;
}
body{
	background-color: #444444;
}
.sidebar{
	margin-left:0px;
	width: 300px;
	padding-top:2%;
	background-color: #282828;
	position: fixed;
	height: 100%;
	box-shadow: 3px 0px 10px #111111;
}
.sidebar img{
	margin-left: 20px;
	margin-right: auto;
	padding: 16px;
}
.sidebar li{
	font-family: courier new;
	display: block;
	padding: 16px;
	font-size: 160%;
	text-decoration: none;
}
.sidebar a{
	color: white;
	text-decoration: none;
	transition: 0.15s ease;
}
.sidebar a:hover, header a:hover{
	/* text-decoration: underline; */
	color: #dd4a4a;
}
#menu-social{
	padding-left: 0px;
}
#menu-social img{
	width:0.9vw;
	height:0.9vw;
	margin-right:6px;
}
.social-buttons li{
	display: inline;
	padding-right: 17px;
}
header{
	background-color: #282828;
	padding-left: calc(10% + 300px);
	padding-right: 10%;
	padding-top: 2%;
	padding-bottom: 2%;
	box-shadow: 0px 4px 10px #222222;
}
header h1{
	font-size:2vw;
	padding-bottom:0.5%;
}
header a{
	vertical-align: middle;
	color: white;
	text-decoration: none;
	transition:0.15s ease;
}
header li{
	font-size: 1.2vw;
}
#main-page-media img{
	display:block;
	width:100%;
	height:auto;
}
#main-page-media{
	position:relative;
}
#overlay{
	position: absolute;
	background: rgba(90, 27, 18, 0.75); /* Black see-through */
	color: #f1f1f1;
	width: 100%;
	height: 100%;
	transition: .7s ease;
	opacity: 1;
	font-size:5vw;
}
#overlay p{
	text-align: center;
	padding-top:25%;
	transition: .7s ease;
}
#main-page-media:hover #overlay {
	opacity: 0;
}
#main-page-media:hover #overlay p{
	padding-top:40%;
}
#page:not(.emphasis, .content){
	color: black;
	background-size: length;
	background-color: white;
	margin-left: calc(10% + 300px);
	margin-right: 10%;
	display: flex;
	flex-flow: column;
	height: 100%;
}
.content{
	color: black;
	/* background-size: length; */
	background-color: white;
	/* display: flex; */
	flex-flow: column;
	/* height: 100%; */
}
.content:not(#intro){
	padding: 10%;
	font-size: 1.1vw;
}
.content h2{
	text-align:center;
	text-decoration:underline;
	padding-bottom:6%;
}
.emphasis{
	font-weight:bold;
	color: #dd4a4a;
	background:none;
}
#intro{
	background-size: length;
	background-color: white;
	/* display: flex; */
	/* flex-flow: column; */
	padding: 20%;
	padding-bottom:10%;
	padding-top:10%;
	font-size: 1.4vw;
}